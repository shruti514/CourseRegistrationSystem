<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

  <persistence-unit name="student_registration_system" transaction-type="RESOURCE_LOCAL">
    <description>
      Persistence unit for course registration system
    </description>
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>



    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://${IPADDRESS}:${PORT}/${DBNAME}" />
      <property name="javax.persistence.jdbc.user" value="${USER}" />
      <property name="javax.persistence.jdbc.password" value="${PASS}" />

      <property name="hibernate.connection.autocommit" value="false" />
      <property name="hibernate.connection.isolation" value="2"/> <!-- 1: READ UNCOMMITTED 2: READ COMMITTED 4: REPEATABLE READ 8: SERIALIZABLE -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
      <property name="hibernate.show_sql" value="false" />
      <property name="hibernate.hbm2ddl.auto" value="update" />
    </properties>

  </persistence-unit>

</persistence>
